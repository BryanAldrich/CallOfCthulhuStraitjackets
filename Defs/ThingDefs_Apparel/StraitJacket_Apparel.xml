<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="ApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>



  <ThingDef Name="ApparelMakeableBase" ParentName="ApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>TailoringSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>
  

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Straitjacket</defName>
        <thingClass>Straitjacket.Apparel_Straitjacket</thingClass>		
		<description>This is a jacket with overlong sleeves used to prevent individuals from harming themselves or others.
		</description>
		<label>straitjacket</label>		
		<graphicData>
			<texPath>Apparel/Bodywear_Clothing/StraitJacket/ROMStraitJacket_Male_front</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>	
		</graphicData>
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>110</MaxHitPoints>
			<WorkToMake>10000</WorkToMake>
			<Mass>2.5</Mass>
			<ArmorRating_Blunt>0.03</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.03</ArmorRating_Sharp>
			<Insulation_Cold>-30</Insulation_Cold>
			<Insulation_Heat>-4</Insulation_Heat>
		</statBases>
		<equippedStatOffsets>
          <MentalBreakThreshold>-1.0</MentalBreakThreshold>
		  <WorkSpeedGlobal>-0.98</WorkSpeedGlobal>
		  <MoveSpeed>-0.70</MoveSpeed>	  
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<worngraphicPath>Apparel/Bodywear_Clothing/StraitJacket/ROMStraitJacket</worngraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<commonality>0</commonality>
			<tags>
				<li>CallOfCthulhu_InsanePawn</li>
			</tags>
			<defaultOutfitTags>
				<li>CallOfCthulhu_InsanePawn</li>			
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>
  
</ThingDefs>
